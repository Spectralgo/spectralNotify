{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "alchemy dev",
    "deploy": "alchemy deploy",
    "destroy": "alchemy destroy",
    "counter:generate": "drizzle-kit generate --config=drizzle.config.counter.ts",
    "counter:migrate": "./scripts/counter-migrate.sh",
    "task:generate": "drizzle-kit generate --config=drizzle.config.task.ts",
    "workflow:generate": "drizzle-kit generate --config=drizzle.config.workflow.ts"
  },
  "dependencies": {
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@spectralNotify/api": "workspace:*",
    "@spectralNotify/auth": "workspace:*",
    "@spectralNotify/db": "workspace:*",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "hono": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250822.0",
    "@types/node": "^22.13.11",
    "alchemy": "^0.70.0",
    "drizzle-kit": "^0.31.5",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "wrangler": "^4.40.3"
  }
}
