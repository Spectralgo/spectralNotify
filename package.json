{
  "name": "spectralNotify",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "biome check --write .",
    "dev": "alchemy dev ./alchemy.run.ts",
    "cf:dev": "alchemy dev ./alchemy.run.ts",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @spectralNotify/db db:push",
    "db:studio": "turbo -F @spectralNotify/db db:studio",
    "db:studio:local": "turbo -F @spectralNotify/db db:studio:local",
    "db:studio:remote": "turbo -F @spectralNotify/db db:studio:remote",
    "db:generate": "turbo -F @spectralNotify/db db:generate && pnpm run counter:db:generate && pnpm run task:db:generate && pnpm run workflow:db:generate",
    "db:clear": "turbo -F @spectralNotify/db db:clear",
    "db:clear:remote": "turbo -F @spectralNotify/db db:clear:remote",
    "counter:db:generate": "cd apps/server && pnpm drizzle-kit generate --config=drizzle.config.counter.ts",
    "task:db:generate": "cd apps/server && pnpm drizzle-kit generate --config=drizzle.config.task.ts",
    "workflow:db:generate": "cd apps/server && pnpm drizzle-kit generate --config=drizzle.config.workflow.ts",
    "deploy": "alchemy deploy ./alchemy.run.ts",
    "destroy": "alchemy destroy ./alchemy.run.ts",
    "cf:deploy": "alchemy deploy ./alchemy.run.ts",
    "cf:destroy": "alchemy destroy ./alchemy.run.ts"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.2.6",
    "ultracite": "5.6.4",
    "tsdown": "^0.15.5",
    "@types/node": "^22.13.11",
    "alchemy": "^0.79.0",
    "@cloudflare/workers-types": "^4.20250822.0"
  },
  "packageManager": "pnpm@10.12.1"
}
