{
  "name": "spectralNotify",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "dev": "alchemy dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @spectralNotify/db db:push",
    "db:studio": "turbo -F @spectralNotify/db db:studio",
    "db:studio:local": "turbo -F @spectralNotify/db db:studio:local",
    "db:studio:remote": "turbo -F @spectralNotify/db db:studio:remote",
    "db:generate": "turbo -F @spectralNotify/db db:generate",
    "counter:generate": "cd apps/server && pnpm drizzle-kit generate --config=drizzle.config.counter.ts",
    "task:generate": "cd apps/server && pnpm drizzle-kit generate --config=drizzle.config.task.ts",
    "deploy": "alchemy deploy",
    "destroy": "alchemy destroy"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.2.6",
    "ultracite": "5.6.4",
    "tsdown": "^0.15.5",
    "@types/node": "^22.13.11",
    "alchemy": "^0.70.0",
    "@cloudflare/workers-types": "^4.20250822.0"
  },
  "packageManager": "pnpm@10.12.1"
}
