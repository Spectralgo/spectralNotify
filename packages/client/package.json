{
  "name": "@spectralnotify/client",
  "version": "0.1.0",
  "description": "Portable React client library for SpectralNotify workflow and task updates",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown src/index.ts --format esm,cjs --dts",
    "dev": "tsdown src/index.ts --format esm,cjs --dts --watch",
    "check-types": "tsc --noEmit",
    "test:workflow-api": "tsx test/workflow-api.test.ts"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@tanstack/react-query": "^5.0.0",
    "@types/node": "^22.13.11",
    "@types/react": "^18.3.18",
    "react": "^18.3.1",
    "tsdown": "^0.15.5",
    "tsx": "^4.0.0",
    "typescript": "^5.8.1"
  },
  "keywords": [
    "spectralnotify",
    "react",
    "tanstack-query",
    "websocket",
    "workflow",
    "task",
    "real-time"
  ],
  "license": "MIT"
}
